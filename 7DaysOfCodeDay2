const nome = prompt("Qual o seu nome?");
const idade = prompt("Quantos anos você tem?");
const lcode = prompt("Qual linguagem de programação você está estudando?");
const msg = `"Olá ${nome}, você tem ${idade} anos e já está aprendendo ${lcode}!"`;
const resp1 = `"Muito bom! Continue estudando e você terá muito sucesso."`;
const resp2 = `"Ahh que pena... Já tentou aprender outras linguagens?"`;
alert(msg);

const resposta = prompt("Você gosta de estudar ${lcode}? Responda com o número 1 para SIM ou 2 para NÃO.");


if(resposta == 1){
alert(resp1);
}
else if (resposta == 2) {
alert(resp2);
}
