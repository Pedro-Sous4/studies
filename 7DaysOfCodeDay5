
let vrf = "sim";
let vegetais = [];
let laticinios = [];
let doces = [];
let frutas = [];
let msg = prompt("Você deseja adicionar uma comida na sua lista de compras?(Opções: sim ou não)");

while(vrf == "sim"){
					if(msg == "sim"){
								let msg1 = prompt("Qual categoria essa comida se encaixa?(Digite: 1 - Vegetais, 2 - laticinios, 3 - doces e 4 - frutas)");
			
					if (msg1 == "4")	{
					let fr = prompt("Qual fruta você deseja adicionar a sua lista de compras?");
					var adicionar = frutas.push(fr);
					alert(frutas);
									}
		
		
					else if(msg1 == "3"){
					let dc = prompt("Qual doce você deseja adicionar a sua lista de compras?");
					var adicionar = doces.push(dc);
					alert(doces);
									}
		

					else if(msg1 == "1"){
					let vg = prompt("Qual vegetal você deseja adicionar a sua lista de compras?");
					var adicionar = vegetais.push(vg);
					alert(vegetais);
									}
		
					else if(msg1 == "2"){
					let lt = prompt("Qual laticinio você deseja adicionar a sua lista de compras?");
					var adicionar = laticinios.push(lt);
					alert(laticinios);
									}
			

								}
							
					else if(msg == "não"){
					alert("Obrigado por usar nosso APP, volte sempre.");
					

						}
					
					else{
					alert("Opção inválida!!")}
			vrf = prompt("Deseja continuar?(Opções: sim ou não)");
			}
alert(`Sua lista de compras foi: ${frutas}, ${doces}, ${vegetais} e ${laticinios}`)
alert("Obrigado por usar nosso APP, volte sempre.");
